<% form_for @item do |f| %>
	<%= f.label :name %>: 
	<%= f.text_field :name %>

  <br />

  <%= f.label :quantity %>:
  <%= f.text_field :quantity, :size => 3 %>

  <br />

  <% if new %>
    <%= f.label :wholesale_cost %>:
    <%= f.text_field :wholesale_cost, :size => 3 %>
  <% end %>

  <br />

  <%= (new) ? (submit_tag :Create) : (submit_tag :Update) %>
<% end %>
