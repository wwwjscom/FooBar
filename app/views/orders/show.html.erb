<% @order.menu_items.each do |menu_item_id, amt| %>
  <% m = MenuItem.find(menu_item_id) %>
  <% if amt.to_i > 0 %>
    <%= (amt.to_i > 1) ? m.name.capitalize.pluralize : m.name.capitalize %> (x<%= amt %>) <%= number_to_currency m.price.to_f/100 %>/each<br />
  <% end %>
<% end %>
<br />
Total: <%= number_to_currency @order.total.to_f/100 %>
<br />

